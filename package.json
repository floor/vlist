{
  "name": "vlist",
  "version": "0.3.0",
  "description": "Lightweight, high-performance virtual list with zero dependencies",
  "author": {
    "name": "Floor IO",
    "url": "https://floor.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floor/vlist.git"
  },
  "keywords": [
    "virtual-list",
    "virtual-scroll",
    "virtualized-list",
    "infinite-scroll",
    "windowing",
    "list-virtualization",
    "dom-recycling",
    "large-list",
    "performance",
    "typescript",
    "zero-dependencies"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core.d.ts"
    },
    "./data": {
      "import": "./dist/data/index.js",
      "types": "./dist/data/index.d.ts"
    },
    "./compression": {
      "import": "./dist/compression/index.js",
      "types": "./dist/compression.d.ts"
    },
    "./selection": {
      "import": "./dist/selection/index.js",
      "types": "./dist/selection/index.d.ts"
    },
    "./scroll": {
      "import": "./dist/scroll/index.js",
      "types": "./dist/scroll/index.d.ts"
    },
    "./groups": {
      "import": "./dist/groups/index.js",
      "types": "./dist/groups/index.d.ts"
    },
    "./grid": {
      "import": "./dist/grid/index.js",
      "types": "./dist/grid/index.d.ts"
    },
    "./styles": "./dist/vlist.css",
    "./styles/extras": "./dist/vlist-extras.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "build:sandbox": "bun run sandbox/build.ts",
    "dev": "bun run build.ts --watch",
    "dev:sandbox": "bun run sandbox/build.ts --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "serve": "bun run serve.ts",
    "sandbox": "bun run build && bun run build:sandbox && echo 'Open http://localhost:3337/sandbox' && bun run serve.ts",
    "prepublishOnly": "bun run build --types",
    "link:mtrl": "cd ~/Code/mtrl && bun link && cd - && bun link mtrl",
    "link:mtrl-addons": "cd ~/Code/mtrl-addons && bun link && cd - && bun link mtrl-addons",
    "link:libs": "bun run link:mtrl && bun run link:mtrl-addons",
    "unlink:mtrl": "rm -f node_modules/mtrl && bun install",
    "unlink:mtrl-addons": "rm -f node_modules/mtrl-addons && bun install",
    "unlink:libs": "bun run unlink:mtrl && bun run unlink:mtrl-addons"
  },
  "bugs": {
    "url": "https://github.com/floor/vlist/issues"
  },
  "homepage": "https://vlist.dev",
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^28.0.0",
    "mtrl": "^0.6.2",
    "mtrl-addons": "^0.5.6",
    "typescript": "^5.0.0"
  }
}
