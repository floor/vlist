{
  "name": "vlist",
  "version": "0.5.1",
  "description": "Lightweight, high-performance virtual list with zero dependencies",
  "author": {
    "name": "Floor IO",
    "url": "https://floor.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floor/vlist.git"
  },
  "keywords": [
    "virtual-list",
    "virtual-scroll",
    "virtualized-list",
    "infinite-scroll",
    "windowing",
    "list-virtualization",
    "dom-recycling",
    "large-list",
    "performance",
    "typescript",
    "zero-dependencies"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core.d.ts"
    },
    "./core-light": {
      "import": "./dist/core-light.js",
      "types": "./dist/core-light.d.ts"
    },
    "./data": {
      "import": "./dist/data/index.js",
      "types": "./dist/data/index.d.ts"
    },
    "./compression": {
      "import": "./dist/compression/index.js",
      "types": "./dist/compression.d.ts"
    },
    "./selection": {
      "import": "./dist/selection/index.js",
      "types": "./dist/selection/index.d.ts"
    },
    "./scroll": {
      "import": "./dist/scroll/index.js",
      "types": "./dist/scroll/index.d.ts"
    },
    "./groups": {
      "import": "./dist/groups/index.js",
      "types": "./dist/groups/index.d.ts"
    },
    "./grid": {
      "import": "./dist/grid/index.js",
      "types": "./dist/grid/index.d.ts"
    },
    "./builder": {
      "import": "./dist/builder/index.js",
      "types": "./dist/builder/index.d.ts"
    },
    "./snapshots": {
      "import": "./dist/snapshots/index.js",
      "types": "./dist/snapshots/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/adapters/react.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.js",
      "types": "./dist/adapters/vue.d.ts"
    },
    "./svelte": {
      "import": "./dist/svelte/index.js",
      "types": "./dist/adapters/svelte.d.ts"
    },
    "./styles": "./dist/vlist.css",
    "./styles/extras": "./dist/vlist-extras.css"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun run build.ts --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build --types",
    "analyze:deps": "madge --circular --extensions ts src",
    "analyze:orphans": "madge --orphans --extensions ts src",
    "analyze:tree": "madge --extensions ts src",
    "analyze:graph": "madge --image deps-graph.svg --extensions ts src",
    "analyze:graph:circular": "madge --circular --image deps-circular.svg --extensions ts src",
    "analyze:graphs": "bun run analyze:graph && bun run analyze:graph:circular",
    "analyze:all": "bun run analyze:deps && bun run analyze:orphans"
  },
  "bugs": {
    "url": "https://github.com/floor/vlist/issues"
  },
  "homepage": "https://vlist.dev",
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.13",
    "jsdom": "^28.0.0",
    "madge": "^8.0.0",
    "react": "^19.2.4",
    "typescript": "^5.0.0",
    "vue": "^3.5.28"
  }
}
