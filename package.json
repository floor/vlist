{
  "name": "vlist",
  "version": "0.2.0",
  "description": "Lightweight, high-performance virtual list with zero dependencies",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/vlist.css"
  },
  "files": [
    "dist",
    "examples"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "build:examples": "bun run build-examples.ts",
    "dev": "bun run build.ts --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "serve": "bunx serve .",
    "examples": "bun run build && bun run build:examples && echo 'Open http://localhost:3333/examples' && bunx serve .",
    "prepublishOnly": "bun run build",
    "link:mtrl": "cd ~/Code/mtrl && bun link && cd - && bun link mtrl",
    "link:mtrl-addons": "cd ~/Code/mtrl-addons && bun link && cd - && bun link mtrl-addons",
    "link:libs": "bun run link:mtrl && bun run link:mtrl-addons",
    "unlink:mtrl": "rm -f node_modules/mtrl && bun install",
    "unlink:mtrl-addons": "rm -f node_modules/mtrl-addons && bun install",
    "unlink:libs": "bun run unlink:mtrl && bun run unlink:mtrl-addons"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floor/vlist.git"
  },
  "keywords": [
    "virtual-list",
    "virtual-scroll",
    "infinite-scroll",
    "virtualization",
    "performance",
    "typescript"
  ],
  "author": "floor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/floor/vlist/issues"
  },
  "homepage": "https://github.com/floor/vlist#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/bun": "^1.0.0",
    "@types/jsdom": "^27.0.0",
    "autoprefixer": "^10.4.24",
    "jsdom": "^28.0.0",
    "mtrl": "^0.6.2",
    "mtrl-addons": "^0.5.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0"
  }
}
