{
  "name": "@floor/vlist",
  "version": "0.7.5",
  "description": "Lightweight, high-performance virtual list with zero dependencies",
  "author": {
    "name": "Floor IO",
    "url": "https://floor.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/floor/vlist.git"
  },
  "keywords": [
    "virtual-list",
    "virtual-scroll",
    "virtualized-list",
    "infinite-scroll",
    "windowing",
    "list-virtualization",
    "dom-recycling",
    "large-list",
    "performance",
    "typescript",
    "zero-dependencies"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/vlist.css",
    "./styles/extras": "./dist/vlist-extras.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.css",
    "!dist/**/*.d.ts.map",
    "!dist/core/lite.d.ts",
    "!dist/core/minimal.d.ts",
    "!dist/adapters/**"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun run build.ts --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build --types",
    "analyze:deps": "madge --circular --extensions ts src",
    "analyze:orphans": "madge --orphans --extensions ts src",
    "analyze:tree": "madge --extensions ts src",
    "analyze:graph": "madge --image deps-graph.svg --extensions ts src",
    "analyze:graph:circular": "madge --circular --image deps-circular.svg --extensions ts src",
    "analyze:graphs": "bun run analyze:graph && bun run analyze:graph:circular",
    "analyze:all": "bun run analyze:deps && bun run analyze:orphans"
  },
  "bugs": {
    "url": "https://github.com/floor/vlist/issues"
  },
  "homepage": "https://vlist.dev",
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.13",
    "esbuild": "^0.27.3",
    "jsdom": "^28.0.0",
    "madge": "^8.0.0",
    "react": "^19.2.4",
    "typescript": "^5.0.0",
    "vue": "^3.5.28"
  }
}
